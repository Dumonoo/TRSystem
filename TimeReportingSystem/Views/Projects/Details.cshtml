@model TimeReportingSystem.Models.Raport
@{
    ViewData["Title"] = "Szczegóły aktywności dla projektu - " + ViewData["ProjectCode"];
    var usersData = ViewData["Users"] as Users;
    var projectCode = ViewData["ProjectCode"] as string;
   
}
<h1>@ViewData["Title"]</h1>
<h3>Dla użytkownika: @ViewData["SelectedUser"] na okres: @ViewData["Period"]</h3>

<table class="table table-bordered table-sm">
    <thead>
        <th>
            Data aktywności
        </th>
        <th>
            Kod podaktyności
        </th>
        <th>
            Zadeklarowany czas:
        </th>
        <th>
            Opis
        </th>
    </thead>
    <tbody>
        @foreach (var entry in Model.entries)
        {
            @if (entry.code == projectCode)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => entry.date)</td>
                    <td>@Html.DisplayFor(modelItem => entry.subcode)</td>
                    <td>@Html.DisplayFor(modelItem => entry.time)</td>
                    <td>@Html.DisplayFor(modelItem => entry.description)</td>
                </tr>
            }
        }
    </tbody>
</table>
<a href="##" onClick="history.go(-1); return false;" class="btn btn-warning">Powrót</a>

